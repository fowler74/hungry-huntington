{% if deals.getPageData('callMethod') == 'getRandom'%}
    {% set title = "Random Food Deal" %}
{% elseif deals.getPageData('callMethod') == 'getRandomDeal' %}
    {% set title = "Random" %}
    {% set type = deals.getPageData('urlTitle')[1] %}
{% endif %}
{% include 'inc/head.twig' %}
{% include 'inc/header.twig' %}
<section class="page-title">
	<div class="wrap">
		<h1>{{ title|capitalize }} {{ type|capitalize|replace({'-':' '}) }}</h1>
	</div>
</section>
<section class="top">
    <div class="wrap">
        {% if deals.getPageData('callMethod') == 'getRandom'%}
            <ul class="pageList">
                <li><a href="/random/food-deals/">Food Deals</a></li>
                <li><a href="/random/drink-deals/">Bar Deals</a></li>
            </ul>
        {% elseif deals.getPageData('callMethod') == 'getRandomDeal' %}
            {% for deal in deals.getDealsForDow(deals.getPageData('urlTitle')[1]) %}
            {% include 'inc/deal-template.twig' %}
            {% endfor %}
        {% endif %}
    </div>
</section>
{% include 'inc/footer.twig' %}
